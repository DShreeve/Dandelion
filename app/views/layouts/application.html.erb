<!DOCTYPE html>
<html>
<head>
  <title>Dandelion</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand" >
        AutoRSpec
      </div>
    </div>
    <div class="collapse navbar-collapse" >
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if params[:controller] == 'projects' %>">
          <%= link_to 'Projects', projects_path %> </li>
        <li class="<%= 'active' if params[:controller] == 'validations' %>"> 
          <%= link_to 'Validations', validations_path %> </li>
        <li class="<%= 'active' if params[:controller] == 'data_types' %>"> 
          <%= link_to 'Data Types', data_types_path %> </li>
      </ul>
    </div>
  </div>
</nav>

<body class="container">
  <div class="col-md-12">
    <%= yield %>
  </div>
</body>
</html>
