<p id="notice"><%= notice %></p>

<h1>Listing Property Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Field</th>
      <th>Property</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @property_assignments.each do |property_assignment| %>
      <tr>
        <td><%= property_assignment.field_id %></td>
        <td><%= property_assignment.property_id %></td>
        <td><%= property_assignment.value_id %></td>
        <td><%= link_to 'Show', property_assignment %></td>
        <td><%= link_to 'Edit', edit_property_assignment_path(property_assignment) %></td>
        <td><%= link_to 'Destroy', property_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

