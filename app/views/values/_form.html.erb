<%= form_for([@project,@table,@field,@validation_assignment,@value], html: {class:"form-horizontal"}) do |f| %>
  <% if @value.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@value.errors.count, "error") %> prohibited this value from being saved:</h2>

      <ul>
      <% @value.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :value , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= @value_data_type %>
      <% if @value_data_type == "Integer" %>
        <%= f.number_field :value, class: "form-control" %>
      <% elsif @value_data_type == "Float" %>
        <%= f.number_field :value, step: 0.01, class: "form-control" %>
      <% elsif @value_data_type == "String" %>
        <%= f.text_field :value, class: "form-control" %>
      <% else %>
        <%= f.select :value, options_for_select([["Yes","true"],["No","false"]]), class: "form-control" %>
      <% end %>
    </div>
  </div>

  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit" , class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
