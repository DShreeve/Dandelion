<p id="notice"><%= notice %></p>

<h1><%= @project.name %> > <%= @table.name %> > <u>Fields</u></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Data type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.description %></td>
        <td><%= DataType.find(field.data_type_id).name %></td>
        <td><%= link_to 'Show', project_table_field_path(@project, @table, field) %></td>
        <td><%= link_to 'Edit', edit_project_table_field_path(@project, @table, field) %></td>
        <td><%= link_to 'Destroy', project_table_field_path(@project, @table, field), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', project_tables_path(@project), class: "btn btn-default" %> 
<%= link_to 'New Field', new_project_table_field_path(@project, @table), class: "btn btn-primary"  %>
